@{
    @* Вказуємо обгортку для нашої сторінки *@
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using VasyanStore.Client.Models;

<div class="container">
    <div class="row">
        @foreach (GameViewModel game in ViewBag.Games)
        {
            <div class="col-4">
                <div class="card bg-info">
                    <div class="card-body">
                        <p>@game.Name</p>
                        <p>@game.Price</p>
                        <p>@game.ReleaseDate</p>
                        <p>@game.Genre</p>
                        <p>@game.Developer</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>