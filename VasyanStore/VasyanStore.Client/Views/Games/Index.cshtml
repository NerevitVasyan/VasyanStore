@{
    @* Вказуємо обгортку для нашої сторінки *@
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using VasyanStore.Client.Models;
@model IEnumerable<GameViewModel>

<div class="container">
    <div class="row">
        @foreach (var game in Model)
        {
            <div class="col-4">
                <div class="card bg-info">
                    <div class="card-body">
                        <p>@game.Name</p>
                        <p>@game.Price</p>
                        <p>@game.ReleaseDate</p>
                        <p>@game.Genre</p>
                        <p>@game.Developer</p>
                    </div>
                </div>
            </div>
        }
    </div>
    <a href="/Games/AddGame ">Add new Game</a>
    @Html.ActionLink("Add new Game", "AddGame", null, new { @class = "btn btn-info" })

</div>